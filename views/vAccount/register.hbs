</script>

{{!-- xác nhận đầy đủ thông tin (chưa làm)--}}
<script>
    $('#txtDOB').datetimepicker({
        format: 'd/m/Y',
        timepicker: false,
        mask: true,
    });

    $('#frmRegister').on('submit', function(e){

        e.preventDefault();
        if(validate())
            $('#frmRegister').off('submit').submit();
    })

    function validate(){
        return true;
    }
</script>

{{/section}}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website bán hàng - {{{_sections.title}}}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" >
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" >
    {{{_sections.css}}}

</head>
<body>            
    <!-- navbar -->

    {{> navbar}}
    <!-- body -->

    <div class="container-fluid mt-4 ">
      <div class="row">
        {{!-- --- --}}
        <div class="col-sm-9">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h4>ĐĂNG KÝ TÀI KHOẢN</h4>
                </div>

                <div class="card-body">
                    <form method="POST" action="" id = "frmRegister">
                        <div class="form-group">
                            <label for="txtUsername">Tài Khoản</label>
                            <input type="text" class="form-control" id="txtUsername" name= "username" autofocus>
                        </div>
                        
                        <div class="form-group">
                            <label for="txtPassword">Mật Khẩu</label>
                            <input type="password" class="form-control" id="txtPassword" name= "password" >
                        </div>

                        <div class="form-group">
                            <label for="txtConfirm">Nhập lại mật khẩu</label>
                            <input type="password" class="form-control" id="txtConfirm" Confirm= "confirm" >
                        </div>

                        <div class="form-group">
                            <label for="txtName">Tên</label>
                            <input type="text" class="form-control" id="txtName" name= "name" >
                        </div>

                        <div class="form-group">
                            <label for="txtEmail">Email</label>
                            <input type="text" class="form-control" id="txtEmail" name= "email" >
                        </div>

                        <div class="form-group">
                            <label for="txtDOB">Ngày Sinh</label>
                            <input type="text" class="form-control" id="txtDOB" name= "dob" >
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Đăng Ký
                        </button>
                    </form>
                </div>
            </div>
        </div>
        {{!-- --- --}}

      </div>
    </div>

    <div class="card-footer text-muted bg-dark text-white">
      @2021
      shopping@gmail.com
    </div>
    
    
    

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" ></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" ></script>
    {{{_sections.js}}}
</body>
</html>









