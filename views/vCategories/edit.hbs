<div class="card">
    <div class="card-header">
        <h4>Edit Categories</h4>
    </div>
    <div class="card-body">
        <form method="POST">

            <div class="form-group">
                <label for="txtCategoryId">#</label>
                <input type="text" class="form-control" id="txtCategoryId" name= "CatID" readonly
                value="{{this.category.CatID}}">
            </div>

            <div class="form-group">
                <label for="txtCategoryName">Category</label>
                <input type="text" class="form-control" id="txtCategoryName" name= "CatName" autofocus 
                value="{{this.category.CatName}}">
            </div>
            
            <a class = "btn btn-success" href="/admin/categories" role="button" title="Back to list">
                <i class="fa fa-backward" aria-hidden="true"></i>
            </a>

            <button type="submit" class="btn btn-danger" title="Remove Category" formaction="/admin/categories/delete">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
            
            <button type="submit" class="btn btn-primary" formaction="/admin/categories/update">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </form>
    </div>
    

    <div class="card-footer text-muted">
    Footer
    </div>
</div>