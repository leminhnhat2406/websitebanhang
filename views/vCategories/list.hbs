<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h4>Loại Sản Phẩm</h4>
        <a class = "btn btn-outline-success" href="/admin/categories/add" role="button">
        <i class="fa fa-plus" aria-hidden="true"></i>
            Thêm Loại Sản Phẩm
        </a>
    </div>
    {{#if this.empty}}
    <div class="card-body">
        <h4 class="card-text">Không có dữ liệu.</h4>
    </div>
    {{else}}
    <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col" class="text-center ">#</th>
            <th scope="col">Loại Sản Phẩm</th>
            <th scope="col">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            {{#each this.categories}}
                <tr>
                    <th scope="row" class="text-center ">{{CatID}}</th>
                    <td>{{CatName}}</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="/admin/categories/edit?id={{CatID}}" role="button" title="Edit Category">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>

                        {{!-- <a class="btn btn-danger btn-sm" href="javascript:;" role="button">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a> --}}
                    </td>
                    
                </tr>
            {{/each}}
            
        </tbody>
    </table>
    {{/if}}

    <div class="card-footer text-muted">
    Footer
    </div>
</div>