{{#section  'title'}}
Chi Tiết Sản Phẩm
{{/section}}
<div class="list">
    <div class="card-header bg-dark text-white">
        <h4>Chi Tiết Sản Phẩm</h4>
    </div>
    <div class="card-body">
        <form method="POST">

            {{!-- <div class="form-group">
                <label for="txtProductId">#</label>
                <input type="text" class="form-control" id="txtProductId" name= "ProID" readonly
                value="{{this.products.ProID}}">
            </div> --}}

            <img src="/public/image/sp/{{this.products.ProID}}/main.jpg"  class="card-img-top">

            <div class="form-group">
                <label for="txtProductName">Tên Sản Phẩm</label>
                <input type="text" class="form-control" id="txtProductName" name= "ProName" readonly 
                value="{{this.products.ProName}}">
            </div>

            <div class="form-group">
                <label for="txtPrice">Giá Sản Phẩm</label>
                <input type="text" class="form-control" id="txtPrice" name= "Price" readonly 
                value="{{this.products.Price}}">
            </div>

            <div class="form-group">
                <label for="txtTinyDes">Mô Tả Chi Tiết</label>
                <input type="text" class="form-control" id="txtTinyDes" name= "TinyDes" readonly 
                value="{{this.products.TinyDes}}">
            </div>
            
            <a class = "btn btn-success" href="/" role="button" title="Back to list">
                <i class="fa fa-backward" aria-hidden="true"></i>
            </a>
            <a class="btn btn-sm btn-outline-success" href="/cart/addtocart?id={{this.products.ProID}}" role="button">
                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                Thêm Vào Giỏ Hàng
                            </a>
                            
        </form>
        <hr>

        {{#if lcIsAuthenticated}}
        <hr>
        <form action="/products/addComment" method="post">
            <div class="form-group">
                <label for="txtProductName">Bình luận</label>
                <input type="text" class="form-control" id="prodId" name= "prodId" readonly hidden
                value="{{this.products.ProID}}">
                <input type="text" class="form-control" id="comment" name= "comment" >
            </div>
            <button class="btn btn-sm btn-outline-success" type="submit">Submit</button>
        </form>
        <hr>
        {{/if}}

        {{#each this.products.cmts}}
            <hr>
            <div class="form-group">
                    <label for="txtProductName"><b>{{userName}}</b> - <i>{{ts}}</i></label>
                    <input type="text" value = "{{cmt}}" class="form-control" id="comment" name= "comment" readonly>
            </div>
            <hr>
        {{/each}}
    </div>
</div>